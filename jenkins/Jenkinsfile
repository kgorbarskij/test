podTemplate(containers: [
    containerTemplate(name: 'dind', image: 'jenkins/jnlp-agent-docker', command: '/bin/bash -c', args: 'cat'),
  ]) {
    node(POD_LABEL) {
        stage('docker login') {
            echo " ============== docker login =================="
                container('dind') {
                    withCredentials([usernamePassword(credentialsId: 'kgorbarskij_dhub', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        sh """
                        docker login -u $USERNAME -p $PASSWORD
                        """
                    }
                }    
        }
    }
}
