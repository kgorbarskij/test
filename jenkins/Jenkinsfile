            stage('Deploy') {
              steps {
                remote = [:]

                remote.name = "name"
                remote.host = "192.168.1.215"
                remote.allowAnyHosts = true
                remote.failOnError = true
                withCredentials([usernamePassword(credentialsId: 'ubuntu_ssh', passwordVariable: 'password', usernameVariable: 'username')]) {
                    remote.user = username
                    remote.password = password
                }

                sshPut remote: remote, from: 'deployment.yaml', into: '/home/ubuntu/deployment.yaml'
