        //     }
        // }    
 
            stage('Deploy') {
              steps {
                echo "This is a $STAGE_NAME stage " 
                dir ('k8s/2048'){
                  script {
                    sshagent(credentials: ['ubuntu_ssl']) {
                        sh """#!/bin/bash
                        ssh -o StrictHostKeyChecking=no ubuntu@192.168.1.215 '
                        git clone $github
                        cd test/k8s/2048
                        export tag=78c5c93
                        ./sed.sh
                        kubectl apply -f deployment.yaml
